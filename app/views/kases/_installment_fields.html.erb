<% @kase.installments.each_with_index do |installment, index| %>
    <%= kase_form.fields_for :installments, installment do |f| %>
        <div class="field">
          <%= f.label :amount %>

          <%= f.number_field :amount %>
        </div>
        <div class="field">
          <%= f.label :due_date %>

          <%= f.text_field :due_date, :class => 'date' %>
        </div>
        <div class="field">
          <%= f.label :paid %>

          <%= f.check_box :paid %>
        </div>
        <div class="field">
        </div>
        <hr style="width: 100%; border-top-width: 1px; border-top-style: solid; border-top-color: rgb(229, 229, 229); border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: rgb(255, 255, 255); ">
    <% end %>
<% end %>