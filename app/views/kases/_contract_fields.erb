<%= kase_form.fields_for :contract do |f| %>
    <%#= binding.pry %>
    <div class="field">
    </div>
    <div class="field">
    </div>   <br>
    <div class="field"><b>اطلاعات قرارداد</b>
    </div>
    <div class="field">
    </div>

    <div class="field">
      <%= f.label :idno %>
      <%= f.text_field :idno %>
    </div>
    <div class="field">
      <%= f.label :correspondent_id %>
      <%= f.select(:correspondent_id, Correspondent.all.collect { |p| [p.name, p.id] }, {:include_blank => true}) %>
    </div>
    <div class="field">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>
    <div class="field">
      <%= f.label :due_date %>
      <%= f.text_field :due_date, :class => 'date' %>
    </div>
    <div class="field">
      <%= f.label :total_amount %>
      <%= f.number_field :total_amount %>
    </div>
    <div class="field">
      <%= f.label :sign_date %>
      <%= f.text_field :sign_date, :class => 'date' %>
    </div>

    <%= render 'property_fields', :contract_form => f %>
    <%= render 'guarantees_fields', :contract_form => f %>
    <%= render 'guarantors_fields', :contract_form => f %>

<% end %>