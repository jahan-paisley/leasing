<%= form_for(@kase) do |f| %>
    <%= render 'shared/validation_error_summary', locals = {:object => @kase} %>
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#pane1" data-toggle="tab"><%= t 'activerecord.models.kase' %> </a></li>
        <li><a href="#pane2" data-toggle="tab"><%= t 'activerecord.models.contract' %></a></li>
        <li><a href="#pane3" data-toggle="tab"><%= t 'activerecord.models.installment' %></a></li>
        <li><a href="#pane4" data-toggle="tab"><%= t 'activerecord.models.payment' %></a></li>
      </ul>
      <div class="tab-content">
        <div id="pane1" class="tab-pane active">
          <h4><%= t 'activerecord.models.kase' %></h4>

          <div class="field">
            <%= f.label :idno %>
            <%= f.number_field :idno %>
          </div>
          <div class="field">
            <%= f.label :customer %>
            <%= f.association :customer, :collection => Customer.all, :prompt => 'Choose an existing owner' %>
            <%= f.select(:customer_id, Customer.all.collect { |p| [p.person.lastname+ ', ' + p.person.firstname, p.id] }, {:include_blank => true}) %>
          </div>
          <div class="field">
            <%= f.label :receipt_date %>
            <%= f.text_field :receipt_date, :class => 'date' %>
          </div>
          <div class="field">
            <%= f.label :start_date %>
            <%= f.text_field :start_date, :class => 'date' %>
          </div>
          <div class="field">
            <%= f.label :finish_date %>
            <%= f.text_field :finish_date, :class => 'date' %>
          </div>
          <div class="field">
            <%= f.label :user %>
            <%= f.select(:user_id, User.all.collect { |p| [p.name, p.id] }, {:include_blank => true}) %>
          </div>
          <div class="field">
            <%= f.label :status %>
            <%= f.text_field :status %>
          </div>
        </div>
        <div id="pane2" class="tab-pane">
          <h4><%= t 'activerecord.models.contract' %></h4>
          <%= render 'contract_fields', :kase_form => f %>
        </div>
        <div id="pane3" class="tab-pane">
          <h4><%= t 'activerecord.models.installment' %></h4>
          <%= render 'installment_fields', :kase_form => f %>
        </div>
        <div id="pane4" class="tab-pane">
          <h4><%= t 'activerecord.models.payment' %></h4>
          <%= render 'payment_fields', :kase_form => f %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>