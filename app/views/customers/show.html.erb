
<h3><%= Customer.model_name.human %></h3>

<br/>
<%if notice%>
<div id="notice"><%= notice %></div>
<%end%>
<div class='field'>
  <b><%= Customer.human_attribute_name("firstname") %>:</b>
  <%= @customer.firstname %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("lastname") %>:</b>
  <%= @customer.lastname %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("identity_no") %>:</b>
  <%= @customer.identity_no %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("national_no") %>:</b>
  <%= @customer.national_no %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("birthdate") %>:</b>
  <lable class="ltr"> <%= @customer.birthdate.to_s.gsub('-','/') %></label>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("identity_serial") %>:</b>
  <%= @customer.identity_serial %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("fathername") %>:</b>
  <%= @customer.fathername %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("identity_issue_date") %>:</b>
  <lable class="ltr"> <%= @customer.identity_issue_date.to_s.gsub('-','/') %>  </label>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("identity_issue_city") %>:</b>
  <%= @customer.identity_issue_city %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("legal_type") %>:</b>
  <%= @customer.legal_type %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("gender") %>:</b>
  <%= t @customer.gender %>
</div>

<div class='field'>
  <b><%= Customer.human_attribute_name("marital_status") %>:</b>
  <%= t @customer.marital_status %>
</div>

<br/>
<%= link_to (t 'Edit'), edit_customer_path(@customer) %> |
