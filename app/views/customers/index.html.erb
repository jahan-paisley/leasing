<h1><%= t :list_customers%></h1>

<table>
  <tr>
    <th><%= t 'activerecord.attributes.person.firstname'%></th>
    <th><%= t 'activerecord.attributes.person.lastname'%></th>
    <th><%= t 'activerecord.attributes.person.identity_no'%></th>
    <th><%= t 'activerecord.attributes.person.national_no'%></th>
    <th><%= t 'activerecord.attributes.person.birthdate'%></th>
    <th><%= t 'activerecord.attributes.person.identity_serial'%></th>
    <th><%= t 'activerecord.attributes.person.fathername'%></th>
    <th><%= t 'activerecord.attributes.person.identity_issue_date'%></th>
    <th><%= t 'activerecord.attributes.person.identity_issue_city'%></th>
    <th><%= t 'activerecord.attributes.person.legal_type'%></th>
    <th><%= t 'activerecord.attributes.person.gender'%></th>
    <th><%= t 'activerecord.attributes.person.marital_status'%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |person| %>
  <tr>
    <td><%= person.firstname %></td>
    <td><%= person.lastname %></td>
    <td><%= person.identity_no %></td>
    <td><%= person.national_no %></td>
    <td><%= person.birthdate %></td>
    <td><%= person.identity_serial %></td>
    <td><%= person.fathername %></td>
    <td><%= person.identity_issue_date %></td>
    <td><%= person.identity_issue_city %></td>
    <td><%= person.legal_type %></td>
    <td><%= person.gender %></td>
    <td><%= person.marital_status %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_customer_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

