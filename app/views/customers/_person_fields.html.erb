<%= customer_form.fields_for :person do |f| %>
    <div id="pane1" class="tab-pane active">
      <h4>اطلاعات پایه</h4>

      <div class="field">
        <%= f.label :firstname %>
        <%= f.text_field :firstname %>
      </div>
      <div class="field">
        <%= f.label :lastname %>
        <%= f.text_field :lastname %>
      </div>
      <div class="field">
        <%= f.label :identity_no %>
        <%= f.text_field :identity_no %>
      </div>
      <div class="field">
        <%= f.label :nationalno %>
        <%= f.text_field :nationalno %>
      </div>
      <div class="field">
        <%= f.label :birthdate %>
        <%= f.text_field :birthdate, :class => "date" %>
      </div>
      <div class="field">
        <%= f.label :identity_serial %>
        <%= f.text_field :identity_serial %>
      </div>
      <div class="field">
        <%= f.label :fathername %>
        <%= f.text_field :fathername %>
      </div>
      <div class="field">
        <%= f.label :identity_issue_date %>
        <%= f.text_field :identity_issue_date, :class => "date" %>
      </div>
      <div class="field">
        <%= f.label :identity_issue_city %>
        <%= f.text_field :identity_issue_city %>
      </div>
      <div class="field">
        <%= f.label :gender %>
        <%= f.select(:gender, person_genders_options, {:include_blank => true}) %>
      </div>
      <div class="field">
        <%= f.label :marital_status %>
        <%= f.select(:marital_status, person_marital_options, {:include_blank => true}) %>
      </div>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :job_title %>
        <%= f.text_field :job_title %>
      </div>
      <div class="field">
        <%= f.label :job_position %>
        <%= f.text_field :job_position %>
      </div>

      <div class="field">
        <%= f.label :job_company %>
        <%= f.text_field :job_company %>
      </div>
      <div class="field">
        <%= f.label :job_industry %>
        <%= f.text_field :job_industry %>
      </div>
      <div class="field">
        <%= f.label :education %>
        <%= f.select :education, person_educations_options, {:include_blank => true} %>
      </div>

      <div class='links'>
        <%= link_to_add_association 'add address', f, :addresses %>
      </div>
    </div>
<% end %>