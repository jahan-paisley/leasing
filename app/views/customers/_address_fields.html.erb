<% @customer.person.addresses.each_with_index do |address, index| %>
    <%= person_form.fields_for :addresses, address do |f| %>
        <%= binding.pry%>
        <div id="pane<%= index+2 %>" class="tab-pane">
          <h4>آدرس</h4>

          <div class="field">
            <%= f.label :category %>
            <%= f.select :category, address_categories_options, {:include_blank => true} %>
          </div>
          <div class="field">

          </div>
          <div class="field">
            <%= f.label :city_id %>
            <%= f.select(:city_id, City.all.collect { |p| [p.name, p.id] }, {:include_blank => true}) %>
          </div>

          <div class="field">
            <%= f.label :district %>
            <%= f.text_field :district %>
          </div>

          <div class="field">
            <%= f.label :level1 %>
            <%= f.select :level1, address_levels_options, {:include_blank => true} %>
          </div>
          <div class="field">
            <%= f.label :part1 %>
            <%= f.text_field :part1 %>
          </div>
          <div class="field">
            <%= f.label :level2 %>
            <%= f.select :level2, address_levels_options, {:include_blank => true} %>
          </div>
          <div class="field">
            <%= f.label :part2 %>
            <%= f.text_field :part2 %>
          </div>
          <div class="field">
            <%= f.label :level3 %>
            <%= f.select :level3, address_levels_options, {:include_blank => true} %>
          </div>
          <div class="field">
            <%= f.label :part3 %>
            <%= f.text_field :part3 %>
          </div>

          <div class="field">
            <%= f.label :address_no %>
            <%= f.text_field :address_no, :class => 'number' %>
          </div>

          <div class="field">
            <%= f.label :postal_code %>
            <%= f.text_field :postal_code, :class => 'number' %>
          </div>

          <div class="field">
            <%= f.label :unit_name %>
            <%= f.text_field :unit_name %>
          </div>

          <div class="field">
            <%= f.label :building_name %>
            <%= f.text_field :building_name %>
          </div>

          <div class="field">
            <%= f.label :phones %>
            <%= f.text_field :phones, :class => 'number' %>
          </div>
          <div class="field">
            <%= f.label :mobiles %>
            <%= f.text_field :mobiles, :class => 'number' %>
          </div>
          <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email, :class => 'english' %>
          </div>
          <div class="field hidden">
            <%= f.label :latitude %>
            <%= f.hidden_field :latitude %>
          </div>
          <div class="field hidden">
            <%= f.label :longitude %>
            <%= f.hidden_field :longitude %>
          </div>
          <div class="field">
            <%= f.label :description %>
            <%= f.text_area(:description, :size => '50x5') %>
          </div>
        </div>
    <% end %>
<% end %>
