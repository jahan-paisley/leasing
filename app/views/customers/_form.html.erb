<%= form_for(@customer, :validate => true) do |f| %>
    <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
          <ul>
            <% @customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#pane1" data-toggle="tab">اطلاعات مشتری</a>
        </li>
        <li><a href="#pane2" data-toggle="tab">آدرس اول</a></li>
        <li><a href="#pane3" data-toggle="tab">آدرس دوم</a></li>
      </ul>
      <div class="tab-content">
        <div id="pane1" class="tab-pane active">
          <h4>اطلاعات پایه</h4>
          <%= render 'person_fields', :f => f %>
        </div>
        <% @customer.addresses.each_with_index do |index, address| %>
            <div id="pane<%= index %>" class="tab-pane">
              <h4>آدرس</h4>
              <%= f.fields_for :addresses do |builder| %>
                  <%= render "shared/address/address_fields", :f => builder, :locals => {:address => address} %>
              <% end %>
            </div>
        <% end %>
      </div>
      <!-- /.tab-content -->
    </div><!-- /.tabbable -->

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
