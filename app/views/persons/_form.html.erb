<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname  %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname  %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :identity_no  %><br />
    <%= f.text_field :identity_no %>
  </div>
  <div class="field">
    <%= f.label :national_no  %><br />
    <%= f.text_field :national_no %>
  </div>
  <div class="field">
    <%= f.label :birthdate  %><br />
    <%= f.text_field :birthdate, :class => "date"%>
  </div>
  <div class="field">
    <%= f.label :identity_serial  %><br />
    <%= f.text_field :identity_serial %>
  </div>
  <div class="field">
    <%= f.label :fathername  %><br />
    <%= f.text_field :fathername %>
  </div>
  <div class="field">
    <%= f.label :identity_issue_date  %><br />
    <%= f.text_field :identity_issue_date, :class => "date" %>	
  </div>
  <div class="field">
    <%= f.label :identity_issue_city  %><br />
    <%= f.text_field :identity_issue_city %>
  </div>
  <div class="field">
    <%= f.label :legal_type  %><br />
    <%= f.text_field :legal_type %>
  </div>
  <div class="field">
    <%= f.label :gender  %><br />
	<%= select("person", "gender", Gender.all.map{|o| [o.value,o.key]}, {:include_blank => true}) %>
    <!--
	<%= f.select(:gender, options_for_select([['مرد', 'Male'], ['زن', 'Female']])) %>
    -->
  </div>
  <div class="field">
    <%= f.label :marital_status  %><br />
    <%= f.select(:marital_status, options_for_select([['متاهل', 'Married'], ['مجرد', 'Single']])) %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
