<h1>Listing payments</h1>

<table>
  <tr>
    <th>Kase</th>
    <th>Amount</th>
    <th>Payment date</th>
    <th>Origin account</th>
    <th>Origin bank</th>
    <th>Benef account</th>
    <th>Payment method</th>
    <th>Idno</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.kase %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.payment_date %></td>
    <td><%= payment.origin_account %></td>
    <td><%= payment.origin_bank %></td>
    <td><%= payment.benef_account %></td>
    <td><%= payment.payment_method %></td>
    <td><%= payment.idno %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

